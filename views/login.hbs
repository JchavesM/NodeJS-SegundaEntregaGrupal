{{>header}}
<div class="container">
<h2>{{alert}}</h2>
<div id="login" class="form container-fluid">
  <form action="/login" method="post"" autocomplete=" on">
    <h2>Login</h2>
    <div class="form-group">
      <label for="id">Documento de Identidad</label>
      <input name="id" id="id" class="form-control" required="required" type="text" placeholder="Documento de Identidad" />
    </div>
    <div class="form-group">
      <label for="pass">Contraseña</label>
      <input name="pass" id="pass" class="form-control" required="required" type="password" placeholder="Contraseña" />
    </div>
    <p>
      <button class="btn btn-primary">Entrar</button>
    </p>
    <p class="change_link">
      Aún no eres miembro?
      <a href="/register" class="to_register">Regístrate</a>
    </p>
  </form>
</div>
</div>

{{>footer}}