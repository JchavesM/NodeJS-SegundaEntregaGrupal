{{>header}}
<div class="container">
  <table class="table">
	<h2>Alumnos registrados en el sistema</h2>
	
	<br>
	<thead class="thead-dark">
		<th>Id</th>
		<th>Nombre</th>
		<th>Mail</th>
		<th>Teléfono</th>
		<th></th>
		<th></th>
		<th></th>
	</thead>

	{{#each students}}
	<tr>
		<td>{{this.id}}</td>
		<td>{{this.name}}</td>
		<td>{{this.mail}}</td>
		<td>{{this.phone}}</td>
		<td>{{this.role}}</td>
		<td>
			<a href="/profile_edit?id={{this.id}}"<button class="btn btn-success">Editar datos</button></a>
		</td>
	<tr>
	{{/each}}
  </table>

  <a class="btn btn-secondary" href="/profile?id={{curr_user}}">atrás</a>
</div>

{{>footer}}